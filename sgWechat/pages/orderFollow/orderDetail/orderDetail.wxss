.weui-flex{-webkit-box-align:center;-webkit-align-items:center;align-items:center}
.weui-cells{margin-top:0;opacity:0;-webkit-transform:translateY(-50%);transform:translateY(-50%);-webkit-transition:.3s;transition:.3s}.weui-cells:after,.weui-cells:before{display:none}
.weui-cells_show{opacity:1;-webkit-transform:translateY(0);transform:translateY(0)}
.weui-cell:before{right:30rpx}
.kind-list__item{margin:12rpx 0;background-color:#fff;border-radius:4rpx;overflow:hidden}
.kind-list__item:first-child{margin-top:0}
.kind-list__img{width:32rpx;height:32rpx;position: absolute;right:20rpx;
}
.kind-list__img__sub{
  width: 32rpx;
  height: 32rpx;
  margin-top: 24rpx;
}
.kind-list__item-hd{padding-right:20rpx;-webkit-transition:opacity .3s;transition:opacity .3s;display: flex;justify-content: space-between;}
.kind-list__item-hd_show{opacity:.4}
.kind-list__item-bd{height:0;overflow:hidden}
.kind-list__item-bd_show{height:auto}
.kind-list{
  background-color: #EBEBEB;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
  
}
.info-item{
  font-size: 30rpx;
  line-height: 72rpx;
  padding: 10rpx 20rpx;
  border-bottom: 2rpx solid #ddd;
}
.info-label{
  color: #333;
}
.info-value{
  color: #666;
}



.weui-flex__item{
  position: relative;
  height: 160rpx;
  width: 100%;
}
.progress{
   width: 100rpx; 
  height: 160rpx;
  position: absolute;
  top: 0;left: 0rpx;
  background-color: #DDEDFD;
}
.detail-box{
  position: absolute;
  top:0;left: 0;
   padding: 16rpx 26rpx; 
  width: 100%;
  box-sizing: border-box;
  padding-right: 40rpx;
}
.detail-top,.detail-bottom{
  font-size: 28rpx;
  color: #928f8f;
  text-align: right;
  /* line-height: 50rpx; */
}

.detail-middle{
  color: #333;
  font-size:32rpx; 
}

.finished{
  position: absolute;
  top: 44rpx;left: 426rpx;
  z-index: 500;
}
.finished-img{
  width: 100rpx;
  height: 100rpx;
}