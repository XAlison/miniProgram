.section{
  height: 100vh;
  
   background-color: #E9E9E9; 
  
}
.check-form{
  font-size: 30rpx;
  box-sizing: border-box;
  height: 100vh;
   background-color: #E9E9E9; 
  
}
.form-item{
  border-bottom: 2rpx solid #dedede;
  padding: 0 24rpx;
  line-height: 96rpx;
  background-color: #fff;
  
}
.form-item.last{
  border: none;
}
.picker{
  position: relative;
  color: #3c3c3c;
  width: 340rpx;
}
.picker-input{
  height: 96rpx;
  text-align: right;
  margin-right: 46rpx;
  width: 300rpx;
}
.picker-icon{
  width: 35rpx;
  height: 26rpx;
  position: absolute;
  right: 0rpx;
  top: 38rpx;
}
.picker-pld{
  position: absolute;
  top: 0rpx;
  right: 46rpx;
  color: #808080;
}
.input-label,.picker-label{
  width: 220rpx;
  margin-left: 20rpx;
}
.input-label.lg{
  line-height: 198rpx;
}
.input-val{
  line-height: 50rpx;
  color: #808080;
  margin: 22rpx 0;
}
input,textarea{
  height: 96rpx;
  line-height: 96rpx;
  text-align: right;
  /* margin-right: 60rpx; */
  
}
textarea{
  height: 160rpx;
  line-height: 60rpx;
  padding-top: 20rpx;
  text-align: right;

}
.btn-box:before{
  content: "";
  display: block;
  clear: both;
}
.btn-box{
  background-color: #E9E9E9;
  height: 138rpx;
  margin: 0;
  padding: 80rpx 20rpx;
   /* padding-bottom: 480rpx;  */
}
.btn{
 border: 2rpx solid #dedede;
}

.img-title{
  background: #fff;
  padding: 0 28rpx;
  padding-top: 28rpx;
}
.img-box{
  background-color: #fff;
  padding: 28rpx ;
}
.addImg{
  width: 200rpx;
  height: 200rpx;
}
.img-list{
  flex-wrap: wrap;
  justify-content: flex-start;
}
.image-item{
  width: 200rpx;
  height: 200rpx;
  margin-right: 28rpx;
  margin-top: 12rpx;
}
.logoinfo{
  position: relative;
}
.delete-img{
