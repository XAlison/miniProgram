/**index.wxss**/

.msg-list {
  margin-top: 84rpx;
}

.msg-item {
  /* width: 718rpx; */
  min-height: 200rpx;
  border-bottom: 1rpx solid rgb(233, 233, 233);
  position: relative;
  left:0;
  top:0;
  overflow: hidden;
  margin: 12rpx 0rpx;
  border: 2rpx solid #ddd;
}

.msg {
  position: absolute;
  width: 100%;
  min-height: 200rpx;
  left:0;
  top:0;
  z-index: 100;
  background-color: #FFF;
  border-right: 2rpx solid #ddd;
}

.header-img {
  position: absolute;
  width: 110rpx;
  height: 110rpx;
  left: 20rpx;
  top: 20rpx;
  border-radius: 10%;
}

.user-name {
  position: absolute;
  left: 150rpx;
  top: 20rpx;
}

.msg-text {
  position: absolute;
  left: 150rpx;
  bottom: 20rpx;
  font-size: 80%;
  color: rgb(127, 127, 127);
}

.msg-menu {
  position: absolute;
  width: 100%;
  height: 198rpx;
  left:0;
  top:0;
  z-index: 0;
}

.menu-item {
  position: absolute;
  width: 170rpx;
  height: 198rpx;
  top:1rpx;
  right: 0;
  text-align: center;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}

.menu-item.disagree {
  
  right: 150rpx;
  
}
.chose-icon{
  width: 58rpx;
  height: 58rpx;
}

.item-status{
  width:84rpx;
  min-height:202rpx;
  font-size: 24rpx;
  padding: 70rpx 12rpx;
  box-sizing: border-box;
  text-align: center;
  background-color:#D6D6D6;
  color: #fff;
}
.item-status.green{
  background-color:#77E273;
}
.item-status.red{
  background-color:#F91414;
}
.item-status.blue{
  background-color:#6EBBE5;
}
.item-status.orange{
  background-color:#FE6E1F;
}
.item-status.grey{
  background-color:#ECECEC;
}
.item-detail{
  width: 634rpx;
  min-height: 200rpx;
  padding: 10rpx 12rpx;
  box-sizing: border-box;
  align-items: center;
}
.detail-img{
  width: 132rpx;
  height: 120rpx;
}
.detail-center{
  flex-direction: column;
  height: 100%;
  /* justify-content: flex-start; */
   width: 450rpx; 
}
.detail-center-top{
  color: #c8c8c8;
}
.detail-center-middle{
  font-size: 36rpx;
  /* width: 396rpx;
  height: 96rpx; */
}
.detail-center-bottom{
  font-size: 22rpx;
  /* margin-top: 30rpx; */
}
.detail-right{
  /* width: 146rpx; */
  height: 100%;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.detail-right-middle{
  position: absolute;
  top: 50rpx;
  right: 50rpx;
  z-index: 5000;
}
.detail-right-bottom{
  width: 224rpx;
  margin-top: 66rpx;
}


.person-img{
  width: 28rpx;
  height: 28rpx;
  position: relative;
  top: 4rpx;right: 3rpx;
}
.get-btn{
  width: 125rpx;
  height: 46rpx;
  /* border: 1rpx solid #AAAAAA; */
  font-size: 24rpx;
  line-height: 46rpx;
  background-color: #59CD5F;
  color: #fff;
  margin: 10rpx 0;
}

.float-btn-box{
  position: fixed;
  bottom: 70rpx;
  right: 38rpx;
  z-index: 5000;
}
.float-btn{
  width: 114rpx;
  height: 114rpx;
}
.status-img-box{
  position: absolute;
  top: 34rpx;
  left: 360rpx;
}
.status-img{
  width: 166rpx;
  height: 99rpx;
}


.navbar{  
  background: #fff;
  position: fixed;
  top: 0;left: 0;
  width:100%;
  border-bottom: 2rpx solid #ddd;
  border-top: 2rpx solid #ddd;
  z-index:9999;
  font-size: 30rpx;
}  
.navbar .item{ 
  display: inline-block; 
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx; 
  width: 33%;
  background-color:#fff;
  color: #333; 
  border-left: 2rpx solid #eaeaea;
}  
.navbar .item:first{
  border: none;
}
.navbar .item.active{  
  color: #fff;  
  background-color: #1498F7;
} 
