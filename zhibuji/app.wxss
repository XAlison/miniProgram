  color:#fff;
  border: none;
  z-index: 3000;
  position: fixed;
  top: 0;left: 0;
}
.weui-navbar.full .weui-navbar__item{
  padding:24rpx 0;

}
.weui-navbar.full .weui-navbar__title{
  font-size: 30rpx;
}
.weui-navbar.full .weui-navbar__item.weui-bar__item_on{
  color: #fff;
}
.weui-navbar.full .weui-navbar__slider{
  background-color: #fff;
  width: 119rpx;
  height: 4rpx;
  bottom: 24rpx;
}
.weui-navbar.second{
  position: fixed;
  top: 96rpx;left: 0;
  z-index: 3000;
  margin: 0 25rpx;
  width: 700rpx;
  
}
.weui-navbar.second .weui-navbar__item{
  padding: 18rpx 0;
}
.weui-navbar.second .weui-navbar__item.weui-bar__item_on{
  color: #fd4810;
}
/* end navbar */

