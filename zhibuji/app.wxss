@import 'weui.wxss';
/**app.wxss**/
page{
    background-color: #fff;
    font-size: 30rpx;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
/* 宽高 */
.w100{
  width: 100%;
}
.h80{
  height: 80rpx;
}
/* 定位 */
.pr{
  position: relative;
}
/* 浮动 */
.fl{
  float: left;
}
.fr{
  float: right;
}
/* 字体颜色/大小 */
.green{
  color: #92d859;
}
.red{
  color: #f00;
}
.fs24{
  font-size: 24rpx;
}
.fs36{
  font-size: 36rpx;
}
.fw{
  font-weight: bold;
}
.tc{
  text-align: center
}
.tr{
  text-align: right;
}
/* 间距 */
.ml40{
  margin-left: 40rpx;
}
.mr40{
  margin-right: 40rpx;
}
.mb15{
  margin-bottom: 15rpx;
}
.mt15{
  margin-top: 15rpx;
}
.mt700{
  margin-top: 700rpx;
}
/*文字超出省略*/
.ellipsis {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    display: block;
}
/*弹性盒子  */
.flex-sb{
  display: flex;
  justify-content: space-between;
  
}
.flex-fs{
  display: flex;
  justify-content: flex-start
}
.column-center{
  flex-direction: column;
  align-items: center;
}



/* navbar */
