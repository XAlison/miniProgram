/* 表单 */
.form-item{
  margin-bottom: 36rpx;
}
.form-label{
  min-width: 162rpx;
  line-height: 68rpx;
}
.form-label.sm{
  min-width: 100rpx;
}
.form-label.required:before{
  content: "*";
  color: #f00;
  display: inline-block;
}
.form-picker,.form-input{
  width: 480rpx;
	height: 65rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
	border: solid 2rpx #d7d7d7;
  padding: 0 20rpx;
  line-height: 65rpx;
  text-align: center;
  box-sizing: border-box;
}
.picker-icon{
  width: 24rpx;
	height: 14rpx;
  position: absolute;
  top: 25rpx;right: 30rpx;
}
.picker-pld{
  color: #808080;
}
.form-textarea{
  width: 626rpx;
	height: 203rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
  border: solid 2rpx #d7d7d7;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}
.delete-icon{
  position: absolute;
  bottom: 4rpx;right: 4rpx;
  width: 30rpx;height: 30rpx;
}
.weui-loading.upload{
  position: absolute;
  top: 79rpx;left: 79rpx;
}
.form-btn{
  margin-top: 50rpx;
}
.form-btn.sm{
  width: 293rpx;
	height: 93rpx;
  line-height: 93rpx;
  font-size: 30rpx;
}
.form-unit{
  margin-left: 18rpx;
  line-height: 65rpx;
}
/*end 表单 */


