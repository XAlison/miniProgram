/* end button */

/* modal */
.modal{
  position: absolute;
  top: 0;left: 0;
  width: 100%;
  height: 100%;
  z-index: 5000;

}
.modak-mask{
  width: 100%;
  height: 100%;
  background-color:rgba(0,0,0,.3);
}
.modal-content{
  width: 600rpx;
	height: 800rpx;
	background-color: #f8f8f8;
	border-radius: 10px;
  position: absolute;
  top: 50%;left: 50%;
  margin-top: -400rpx;
  margin-left: -300rpx;
  text-align: center;
}
.modal-content.sm{
  width: 578rpx;
	height: 360rpx;
   margin-top: -260rpx;
  margin-left: -289rpx;
}
.modal-head.sm{
  height: 76rpx;
  line-height: 76rpx;
  background-color: #EDEDED;
  border-radius: 20rpx 20rpx 0  0;
}
.modal-foot{
   border-top: 2rpx solid #ddd;
}
.modal-btn{
  color: #1f91fe;
  width: 49%;
  border-radius: 0 0 0 20rpx;
}
.modal-btn:last-child{
  border-left: 2rpx solid #ddd;
  border-radius: 0 0 20rpx 0 ;
  
}
.modal-btn::after{
  border: none;
  border-radius: 0;
}
.modal-body{
  height:140rpx;
  text-align: center;
}
.modal-input{
  width: 482rpx;
	height: 71rpx;
	background-color: #ffffff;
	border-radius: 20rpx;
	border: solid 2rpx #e4e4e4;
  margin: 50rpx auto;
}
/*end  modal */
