page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
}  
.navbar{  
  background: #fff;
  position: fixed;
  top: 0;left: 0;
  width:100%;
  border-bottom: 2rpx solid #ddd;
  border-top: 2rpx solid #ddd;
  z-index: 99;
}  
.navbar .item{ 
  display: inline-block; 
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx; 
  width: 50%;
  background-color:#fff;
  color: #333; 
}  
.navbar .item.active{  
  color: #fff;  
  background-color: #1498F7;
}  
.box{
  margin-top: 80rpx;
  position: relative;
  margin-bottom: 100rpx;
}
.add-btn-box{
  width: 100%;
  position: fixed;
  bottom: 0;left: 0;
  z-index: 500;
}
.add-btn{
  background-color:#1498F7; 
  color: #fff;
}
.add-icon{
  width: 100rpx;
  height: 100rpx;
}
.no-data{
  margin: 400rpx auto;
  text-align: center;
  font-size: 32rpx;
  color: #999;
  display: none;
}
.no-data.hide{
  display: none;
}
.no-data.show{
  display: block;
}
.vat-item{
  font-size: 28rpx;
  border-bottom: 20rpx solid #EBEBEB;
}
.vat-detail.A{
  background-color: #fff;
}
.vat-detail.B{
  background-color: #FFA865;
  color:#fff;
}
.vat-detail.C{
  background-color: #FF6565;
  color:#fff;
}
.vat-detail{
  line-height: 52rpx;
  border-bottom: 2rpx solid #ddd;
  padding: 8rpx 24rpx;
  position: relative;
}
.cloth-icon{
  width: 32rpx;
  height: 32rpx;
  position: relative;
  top: 6rpx;
  margin-right: 8rpx;
}
.grade{
  position: absolute;
  top: 50rpx;
  right: 180rpx;
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid #999;
  border-radius: 50%;
  line-height: 120rpx;
  text-align: center;
  font-size: 28rpx;
}
.grade.B,.grade.C{
  border-color: #fff;
}

.vat-top{
  margin-top: 20rpx;
  margin-bottom: 28rpx;
}
.dyeing-num{
  font-size: 40rpx;
}
.vat-bottom{
    align-items: center;
}
.process-list{
  padding: 8rpx 24rpx;
  flex-wrap: wrap;
  justify-content: flex-start;
  color: #1498F7;
}
.process-icon{
  position: relative;
 top: 4rpx;
  margin-right: 8rpx;
}
.process-item{
  margin-right: 12rpx;
  width: 22%;
  text-align: center;
  margin-top: 12rpx;
}
.finish-list{
  min-height: 1000rpx;
}
.finish-btn{
  background-color: #1498F7;
  color: #fff;
  margin-top: 40rpx;
  position: fixed;
  bottom:0;left: 0;
  width: 100%;
}

/*模态框  */
.modal{
  position: absolute;
  left:0;
  top: 50%;
  z-index: 200;
  width:100%;
  margin-top: -400rpx;
}
.mask{
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height:100%;
  z-index: 100;
  background:rgba(0,0,0,0.5);
}
.modal-content{
  width:70%;
  height: 800rpx;
  margin: 0 auto;
  background: #fff;
  font-size: 30rpx;
  font-family: "微软雅黑";
  background-color: #eaeaea;
}
.modal-title{
  padding: 16rpx 20rpx;
  text-align: center;
  font-size: 36rpx;
  border-bottom: 2rpx solid #ddd;
  background-color: #fff;
}
.input-item{
  padding: 12rpx 40rpx;
}
.input-item>input{
  width:440rpx;
  height: 76rpx;
  border: 2rpx solid #ddd;
  background-color: #fff;
  padding: 0 8rpx;
  box-sizing: border-box;
  margin-top: 8rpx; 
}
.btn-item{
  margin-top: 34rpx;
}
.submit-btn{
  background-color: #1498F7;
  color: #fff;
  border-radius: 0;
}
.showMask,.showModal{
  display: block;
}
.hideMask,.hideModal{
  display: none;
}
.bottom-line{
  font-size: 28rpx;
  color:#999;
  text-align: center;
  margin: 40rpx 0;
  display: block;
}
.bottom-line.hide{
  display: none;
}
.bottom-line.show{
  display: block;
}